<% include ../partials/header %>
<body class="campgrounds">
<% include ../partials/navbar %>
<!-- code to show jumbotron    -->
<div class="container">
    <div class="jumbotron">
        <h1>Add New Campground</h1>
        <p>Input related information:</p>

        <form class="form-horizontal" action="/campgrounds" method="POST">
          <div class="form-group">
            <div class="col-md-12">
              <input type="text" name="campground[name]" class="form-control" id="inputName" placeholder="Campground Name">
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-12">
              <input type="text" name="campground[image]" class="form-control" id="inputImageURL" placeholder="Image Link / URL">
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-12">
              <textarea rows="10" name="campground[description]" placeholder="Description of The Campground"></textarea>
            </div>
          </div>
          
          <div class="form-group">
            <div class="col-md-12">
              <button type="submit" class="btn btn-primary btn-block">Add</button>
            </div>
          </div>
        </form>
    </div>

<% include ../partials/footer %>