<body class="campgrounds">
<% include partials/header %>
<% include partials/navbar %>

<!-- code to show jumbotron    -->
<div class="container">
    <div class="jumbotron">
        <h1>Welcome to Yelp Camp</h1>
        <p>View our handpicked campgrounds from all over the world</p>
        <p><a class="btn btn-info btn-lg" href="#" role="button">Add New Campground</a></p>
    </div>    

<!-- code to show campground as thumbnail    -->
<div class="row">    
    <% campgroundData.forEach(function(campground){ %>
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src= <%= campground.image %> alt= <%= campground.name %> >
                <div class="caption">
                    <h3><%= campground.name %></h3>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
                </div>
            </div> 
        </div>
    <% }); %>
</div>


<% include partials/footer %>